<form action="/users/sign_up" method="post">
  <label for="name">Name</label>
  <input type="text" name="user[name]" id="name"><br>
  <label for="email">Email</label>
  <input type="text" name="user[email]" id="email"><br>
  <br>
  <label for="password">Password</label>
  <input type="password" name="user[password]" id="password"><br>
  <label for="password_confirmation">Password Confirmation</label>
  <input type="password" name="user[password_confirmation]" id="password_confirmation"><br>
  <button type="submit">Submit</button>
</form>
