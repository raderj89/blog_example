<h1>Edit a Post</h1>

<form method="post" action="/posts/<%= @post.id %>">
  <input type="hidden" name="_method" value="put" />
  <label for="title">Title</label>
  <input type="text" name="post[title]" id="title" value="<%= @post.title %>"><br>
  <label for="body">Body</label>
  <textarea name="post[body]" id="body" cols="35" rows="20"><%= @post.body %></textarea><br>

  <label for="post_tags">Tags:</label>
  <input id="post_tags" name="tags"><br>
  <button type="submit" value="Edit Post">Edit Post</button>


</form>

<% @post.tags.each do |tag| %>
  <li><%= tag.name %></li>
<% end %>
